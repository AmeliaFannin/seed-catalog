<%= form_for @post do |f| %>
  <% if @post.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>
    <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  
  <form role= "form">
    <div class="form-group">
      <%= f.label :general_name %>      
      <%= f.text_field :general_name, class: "form-control input-lg" %><br>

      <%= f.label :variety %>
      <%= f.text_field :variety, class: "form-control" %>
    </div>
 
  
    <div class="form-group">
    <%= f.label :start_date %>
    <%= f.text_field :start_date, { :class => 'datepicker' } %><br>

    <%= f.label :transplant_date %>
    <%= f.text_field :transplant_date, { :class => 'datepicker' } %><br>

    <%= f.label :harvest_date %>
    <%= f.text_field :harvest_date, { :class => 'datepicker' } %><br>
    </div>

    <div class="form-group">
    <%= f.label :review %><br>
    <%= f.text_area :review, class: "form-control", rows: "3" %>
    </div>

  <p>
    <%= f.submit :class => "btn btn-success btn-lg"%>
  </p>
</form>
<% end %>